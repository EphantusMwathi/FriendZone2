


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wallet_holo_blue_light"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:padding="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wallet_holo_blue_light"
            android:orientation="vertical">





            <EditText
                android:textAppearance="?android:textAppearanceLarge"
                android:padding="9dp"

                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/hangout_name"
                android:hint="Hangout Name"/>




            <EditText
                android:textAppearance="?android:textAppearanceLarge"
                android:padding="9dp"

                android:layout_marginTop="20dp"
                android:hint="Hangout Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/hangout_email"/>




            <EditText
                android:textAppearance="?android:textAppearanceLarge"
                android:padding="9dp"

                android:layout_marginTop="20dp"
                android:hint="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/password"
                android:inputType="textPassword"/>

            <EditText
                android:textAppearance="?android:textAppearanceLarge"
                android:padding="9dp"

                android:layout_marginTop="20dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/confirm_password"/>

            <EditText
                android:textAppearance="?android:textAppearanceLarge"
                android:padding="9dp"

                android:layout_marginTop="20dp"
                android:hint="Hangout Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/hangout_detail"/>
            <Button
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:background="@color/bg_register"
                android:layout_height="wrap_content"
                android:text="Hangout_Sign_up"
                android:textColor="@color/white"
                android:id="@+id/sign_up"
                />
            <Button
                android:layout_marginTop="30dp"
                android:text="hangout login page"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/login_in"
                android:background="@color/wallet_holo_blue_light"/>
        </LinearLayout>



    </LinearLayout>
</ScrollView>
